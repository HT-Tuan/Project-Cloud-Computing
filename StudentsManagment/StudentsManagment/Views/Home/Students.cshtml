@{
    ViewData["Title"] = "Danh Sách sinh viên";
}

<div>
    <div>
        <h1>@ViewData["Title"]</h1>
        <a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="AddStudentForm">Add new student</a>
    </div>
    <form class="d-flex mb-1">
        <input type="text" class="form-control" placeholder="Search" aria-label="Recipient's username" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <a class="btn btn-primary" href="#" role="button">Search</a>
        </div>
    </form>



    <table class="table">
        <thead>
            <tr>
                <th scope="col">TT</th>
                <th scope="col">Mã sinh viên</th>
                <th scope="col">Họ đệm</th>
                <th scope="col">Ten</th>
                <th scope="col">Năm học</th>
                <th scope="col">Ngày sinh</th>
                <th scope="col">Năm Nhập học</th>
                <th scope="col">Giới tính</th>
                <th scope="col">Tên Chương Trình Đào ạo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
                {
                <tr>
                    <th scope="row"></th>
                    <td>@item.masinhvien</td>
                    <td>@item.hodem</td>
                    <td>@item.ten</td>
                    <td>@item.namhoc</td>
                    <td>@item.ngaysinh</td>
                    <td>@item.namnhaphoc</td>
                    <td>@item.gioitinh</td>
                    <td>@item.tenChuongTrinhDaoTao</td>
                    <td></td>


                    <td class="d-flex align-items-center">
                        <a class="btn btn-warning" asp-area="" asp-controller="Home" asp-action="UpdateStudentForm">Edit</a>
                        <span>|</span>
                        <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="#">Delete</a>
                    </td>
                </tr>
                }


            </tbody>
    </table>
</div>

