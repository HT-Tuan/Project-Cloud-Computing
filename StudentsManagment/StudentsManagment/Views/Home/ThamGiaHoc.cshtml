@{
    ViewData["Title"] = "Tham Gia Học";
}

<div>
    <div>
        <h1>@ViewData["Title"]</h1>
        <a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="ThemThamGia">Thêm Tham Gia Học</a>
    </div>
   



    <table class="table">
        <thead>
            <tr>
                
                <th scope="col">Mã lớp học phần</th>
                <th scope="col">Mã sinh viên </th>
                <th scope="col">Điểm số</th>

                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
                {
                @foreach (var item in Model)
                    {
                    <tr>
                        
                        <td>@item.maLopHocPhan</td>
                        <td>@item.maSinhVien</td>
                        <td>@item.diemSo</td>


                        <td class="d-flex align-items-center">
                            <form action="UpdateThamGia">
                                <input hidden value=@item.maLopHocPhan name="maLopHocPhan">
                                <input hidden value=@item.maSinhVien name="maSinhVien">
                                <input hidden value=@item.diemSo name="diemSo">

                                <button class="btn btn-warning" type="submit">Edit</button>
                            </form>
                            <span>|</span>
                            <form action="DeleteThamGiaHoc" method="post">
                                <input hidden value=@item.maLopHocPhan name="maLopHocPhan">
                                <input hidden value=@item.maSinhVien name="maSinhVien">
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    }
                }



            </tbody>
    </table>
</div>
