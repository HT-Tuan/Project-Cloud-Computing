@{
        ViewData["Title"] = "Student Form";
    }
    <h1>@ViewData["Title"]</h1>
    <div>
        <form action="AddStudentForm" method="POST" class="row g-3">
            <div class="mb-3">
                <label class="form-label">Mã Sinh Viên</label>
                <input type="text" class="form-control" name="mssv" placeholder="Nhập Vào Mã Sinh Viên">
            </div>

            <div class="mb-3">
                <label class="form-label">Họ Đệm</label>
                <input type="text" class="form-control" name="hoDem" placeholder="Nhậo Vào Họ Đệm">
            </div>

             <div class="mb-3">
                <label class="form-label">Tên</label>
                <input type="text" class="form-control" name="ten" placeholder="Nhập vào Tên">
            </div>
            <div class="mb-3">
                <label class="form-label">Năm Học</label>
                <input type="number" class="form-control" name="namHoc" placeholder="Nhập vào Năm Học">
            </div>
            <div class="mb-3">
                <label class="form-label">Ngày Sinh</label>
                <input type="date" class="form-control" name="ngaysinh" placeholder="Nhập vào Ngày Sinh">
            </div>
            <div class="mb-3">
                <label class="form-label">Năm Nhập Học</label>
                <input type="number" class="form-control" name="namnhaphoc" placeholder="Nhập vào Năm Nhập Học">
            </div>
            <div class="mb-3">
                <label class="form-label">Giới Tính</label>
                <select name="form-control" >
                    <option value="Nam">Nam</option>
                    <option value="Nu">Nu</option>

                </select>
            </div> 
            
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Tên Chương Trình Đào Tạo</label>
                <input type="text" class="form-control" name="ctdt" placeholder="Nhập vào Tên Chương Trình Đào Tạo">
            </div>

            <button type="submit">submit</button>

        </form>
    </div>